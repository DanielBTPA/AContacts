<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCardInfo"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="0dp"
    card:cardCornerRadius="10dp"
    card:cardElevation="4dp"
    card:cardPreventCornerOverlap="false"
    card:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/idRlCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idIvImagePersonalItem"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/personal_image" />

        <TextView
            android:id="@+id/idTvNamePesonalItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/idIvImagePersonalItem"
            android:text="@string/abc_info_cardview_textview_name"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTvPhonePesonalItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTvNamePesonalItem"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/idIvImagePersonalItem"
            android:text="@string/abc_info_cardview_textview_phone"
            android:textSize="9dp"
            android:typeface="monospace" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/idTbCardPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIvImagePersonalItem"
            android:layout_centerHorizontal="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

</android.support.v7.widget.CardView>